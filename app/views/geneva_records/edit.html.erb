<%= simple_form_for @genevarecord do |f| %>

<div class="container-fluid record-div">
  <div class="row">
    <div class="table-responsive">
      <table class="table table-bordered table-striped">
        <thead class="thead-inverse">
        <tr>
          <th><%= @genevarecord.created_at.strftime("%B %d, %Y") %></th>
          <th>Opening Guage</th>
          <th>Opening Stock</th>
          <th>Closing Guage</th>
          <th>Closing Stock</th>
        </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row">GV-01</th>
                <td>
                  <%= f.text_field :GV_01_open_gauge, label: false, placeholder: 'GV-01 Open Gauge', input_html: { class: 'form-control'} %>
                </td>
                <td>
                  <%= f.number_field :GV_01_open_stock, label: false, placeholder: 'GV-01 Open Stock', input_html: { class: 'form-control'} %>
                </td>
                <td>
                  <%= f.text_field :GV_01_close_gauge, label: false, placeholder: 'GV-01 Close Gauge', input_html: { class: 'form-control'} %>
                </td>
                <td>
                  <%= f.number_field :GV_01_close_stock, label: false, placeholder: 'GV-01 Close Stock', input_html: { class: 'form-control'} %>
                </td>
          </tr>
          <tr>
            <th scope="row">GV-02</th>
                <td>
                  <%= f.text_field :GV_02_open_gauge, label: false, placeholder: 'GV-01 Open Gauge', input_html: { class: 'form-control'} %>
                </td>
                <td>
                  <%= f.number_field :GV_02_open_stock, label: false, placeholder: 'GV-01 Open Stock', input_html: { class: 'form-control'} %>
                </td>
                <td>
                  <%= f.text_field :GV_02_close_gauge, label: false, placeholder: 'GV-01 Close Gauge', input_html: { class: 'form-control'} %>
                </td>
                <td>
                  <%= f.number_field :GV_02_close_stock, label: false, placeholder: 'GV-01 Close Stock', input_html: { class: 'form-control'} %>
                </td>
          </tr>
          <tr>
            <th scope="row">GV-03</th>
                <td>
                  <%= f.text_field :GV_03_open_gauge, label: false, placeholder: 'GV-01 Open Gauge', input_html: { class: 'form-control'} %>
                </td>
                <td>
                  <%= f.number_field :GV_03_open_stock, label: false, placeholder: 'GV-01 Open Stock', input_html: { class: 'form-control'} %>
                </td>
                <td>
                  <%= f.text_field :GV_03_close_gauge, label: false, placeholder: 'GV-01 Close Gauge', input_html: { class: 'form-control'} %>
                </td>
                <td>
                  <%= f.number_field :GV_03_close_stock, label: false, placeholder: 'GV-01 Close Stock', input_html: { class: 'form-control'} %>
                </td>
          </tr>
        
        </tbody>
      </table>

    </div>
  </div>
</div>
<%= f.submit 'Update Record', class: 'btn btn-primary btn-new' %>
<%= link_to 'Delete Record', geneva_record_path(@genevarecord), method: :delete, data: {confirm: 'Are you sure you want to delete this?'},class: 'btn btn-danger btn-block' %>

<% end %>
